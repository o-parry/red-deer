Bootstrap: docker
From: ubuntu:lunar
Stage: build

%files
    /data/YOUR_USERNAME_HERE/quantum_example/image /root/image

%post
    export DEBIAN_FRONTEND=noninteractive && \
    apt-get update && \
    apt-get install -y python3-full python3-pip virtualenv && \
    virtualenv /root/venv && \
    /root/venv/bin/pip install --no-deps -r /root/image/requirements.txt

%runscript
    /root/venv/bin/python /root/image/simulate.py $1
